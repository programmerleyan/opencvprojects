import cv2
import numpy as np

# Siyah boş görüntü
canvas = np.zeros((500, 500, 3), dtype="uint8")

# Çizgi
cv2.line(canvas, (50, 50), (450, 50), (0, 255, 0), 3)

# Dikdörtgen
cv2.rectangle(canvas, (50, 100), (200, 200), (255, 0, 0), -1)

# Daire
cv2.circle(canvas, (300, 300), 50, (0, 0, 255), -1)

# Yazı
cv2.putText(canvas, "OpenCV", (150, 400),
            cv2.FONT_HERSHEY_SIMPLEX, 2, (255, 255, 255), 3)

cv2.imshow("Sekiller", canvas)
cv2.waitKey(0)
cv2.destroyAllWindows()
